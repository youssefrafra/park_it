<div class="container">
    <h1>All parkings</h1>
    <div class="row">
    <% @parkings.each do |parking| %>
        <div class="col-6">
            <div class="card shadow p-3 bg-white rounded mb-3">
                <img src="..." class="card-img-top" alt="...">
                <div class="card-body ">
                    <h5 class="card-title"><%= parking.description %></h5>
                    <p class="card-text"><%= parking.address %></p>
                    <div class="d-flex justify-content-between">
                        <%= link_to "Show more", parking_path(parking), class:"btn btn-primary" %>
                    </div>
                </div>
            </div>
        </div>
    <% end %>
    </div>
    <div id="map"
        style="width: 100%; height: 600px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
</div>